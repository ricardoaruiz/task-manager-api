{
  "name": "02-api-task-manager",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsup src/server.ts --format esm --clean",
    "start": "node dist/server.js",
    "test": "vitest",
    "lint": "ultracite check",
    "lint:fix": "ultracite fix",
    "lint:doctor": "ultracite doctor",
    "knex": "node --import tsx ./node_modules/knex/bin/cli.js",
    "migrate:make": "npm run knex -- migrate:make",
    "migrate:latest": "npm run knex -- migrate:latest",
    "migrate:rollback": "npm run knex -- migrate:rollback",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*.+(js|jsx|ts|tsx|md|mdx|yml|yaml)": [
      "npm run lint:fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^17.2.3",
    "fastify": "^5.6.1",
    "fastify-type-provider-zod": "^6.0.0",
    "http-status-codes": "^2.3.0",
    "knex": "^3.1.0",
    "sqlite3": "^5.1.7",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/node": "^24.8.1",
    "@types/supertest": "^6.0.3",
    "commitizen": "^4.3.1",
    "git-cz": "^4.9.0",
    "husky": "^8.0.0",
    "lint-staged": "^16.2.4",
    "supertest": "^7.1.4",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "ultracite": "^5.6.4",
    "vitest": "^3.2.4"
  }
}
