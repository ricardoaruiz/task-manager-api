{
  "name": "task-manager-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsup",
    "start": "node dist/server.js",
    "db:generate": "npx drizzle-kit generate",
    "db:migrate": "npx drizzle-kit migrate",
    "db:studio": "npx drizzle-kit studio",
    "db:seed": "tsx ./src/db/seed/seed.ts",
    "environment:up": "docker compose up -d --wait && npm run db:migrate --wait && npm run db:seed",
    "environment:down": "docker compose down",
    "test": "vitest run src",
    "test:ui": "vitest --ui src",
    "test:watch": "vitest watch src",
    "test:coverage": "vitest run src --coverage",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*.+(js|jsx|ts|tsx|md|mdx|yml|yaml)": [
      "npm run lint:fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cookie": "11.0.2",
    "@fastify/cors": "11.1.0",
    "@fastify/swagger": "9.6.1",
    "@scalar/fastify-api-reference": "1.39.3",
    "@types/node": "24.10.1",
    "bcryptjs": "3.0.3",
    "dotenv": "17.2.3",
    "drizzle-orm": "0.44.7",
    "fastify": "5.6.2",
    "fastify-type-provider-zod": "6.1.0",
    "http-status-codes": "2.3.0",
    "jose": "6.1.1",
    "pg": "8.16.3",
    "tsup": "8.5.1",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "uuidv7": "1.0.2",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@types/pg": "8.15.6",
    "@types/supertest": "6.0.3",
    "@vitest/coverage-v8": "4.0.8",
    "@vitest/ui": "4.0.8",
    "commitizen": "4.3.1",
    "drizzle-kit": "0.31.7",
    "git-cz": "4.9.0",
    "husky": "^8.0.0",
    "lint-staged": "16.2.7",
    "supertest": "7.1.4",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "4.0.8"
  }
}
